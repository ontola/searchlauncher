{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "assembleDebug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Install Debug",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "installDebug"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "clean",
        "build"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Uninstall App",
      "type": "shell",
      "command": "adb",
      "args": [
        "uninstall",
        "com.searchlauncher.app"
      ],
      "problemMatcher": []
    },
    {
      "label": "View Logs",
      "type": "shell",
      "command": "adb",
      "args": [
        "logcat",
        "-s",
        "SearchLauncher"
      ],
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Spotless Apply",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "spotlessApply"
      ],
      "group": "none",
      "problemMatcher": []
    }
  ]
}
