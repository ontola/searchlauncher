# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Kotlin files - 2 spaces (Google Kotlin Style)
[*.{kt,kts}]
indent_style = space
indent_size = 2
continuation_indent_size = 4

# Gradle files
[*.gradle]
indent_style = space
indent_size = 2

[*.gradle.kts]
indent_style = space
indent_size = 2

# XML files (Android layouts, manifests, etc.)
[*.xml]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
